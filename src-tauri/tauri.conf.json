{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "phenoboard",
  "version": "0.3.1",
  "identifier": "org.p2gx.phenoboard",
  "build": {
    "beforeDevCommand": "npx nx serve phenoboard --configuration=development",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npx nx build phenoboard --configuration=development",
    "frontendDist": "../dist/phenoboard/browser"
  },
  "app": {
    "windows": [
      {
        "label": "splashscreen",
        "url": "splash.html",
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "width": 400,
        "height": 300,
        "visible": false 
      },
      {
        "label": "main",
        "title": "GA4GH Phenoboard",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "devtools": true
      }
    ],
    "security": {
    "csp": "default-src 'self' 'unsafe-inline' http://localhost:1420 data:; script-src 'self' 'unsafe-inline' http://localhost:1420; style-src 'self' 'unsafe-inline' http://localhost:1420; img-src 'self' data:; connect-src 'self' file://* http://localhost:1420;"
}
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
